<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantManagementSystem.Reservation_confirm"
             Title="Reservation_confirm">
    <VerticalStackLayout>
        <Label 
            Text="Please confirm your reservation information below: "
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20" Padding="20,50,20,10"/>

        <Label Text="{Binding Info}" />
        <!-- here to display the reservation details, which can bind with the information in reservation input -->

        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="10">
            <Button Text="Back" HorizontalOptions="CenterAndExpand" WidthRequest="400" BackgroundColor="#BD0B0B" FontSize="20" Margin="40" Clicked="OnBacktoReservationInputButtonClicked"></Button>
            <Button Text="Confirm" HorizontalOptions="CenterAndExpand" WidthRequest="400" BackgroundColor="#BD0B0B" FontSize="20" Margin="40" Clicked="OnConfirmReservationButtonClicked"></Button>
        </HorizontalStackLayout>




    </VerticalStackLayout>
</ContentPage>